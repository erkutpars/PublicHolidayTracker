using System;
using System.Threading.Tasks;

class Program
{
    static async Task Main(string[] args)
    {
        HolidayService service = new HolidayService();
        bool exit = false;

        while (!exit)
        {
            Console.WriteLine("\n===== PublicHolidayTracker =====");
            Console.WriteLine("1. Tatil listesini göster (yıl seçmeli)");
            Console.WriteLine("2. Tarihe göre tatil ara (gg-aa formatı)");
            Console.WriteLine("3. İsme göre tatil ara");
            Console.WriteLine("4. Tüm tatilleri 3 yıl boyunca göster (2023–2025)");
            Console.WriteLine("5. Çıkış");
            Console.Write("Seçiminiz: ");

            string choice = Console.ReadLine();

            switch (choice)
            {
                case "1":
                    await service.ShowHolidaysByYear();
                    break;
                case "2":
                    await service.SearchHolidayByDate();
                    break;
                case "3":
                    await service.SearchHolidayByName();
                    break;
                case "4":
                    await service.ShowAllHolidays();
                    break;
                case "5":
                    exit = true;
                    break;
                default:
                    Console.WriteLine("Geçersiz seçim, tekrar deneyin.");
                    break;
            }
        }

        Console.WriteLine("Programdan çıkılıyor...");
    }
}
